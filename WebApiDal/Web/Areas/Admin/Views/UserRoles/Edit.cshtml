@model Web.Areas.Admin.ViewModels.EditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UserRole</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

        @Html.HiddenFor(model => model.OriginalUserRole.UserId)
        @Html.HiddenFor(model => model.OriginalUserRole.RoleId)

        <div class="form-group">
            @Html.LabelFor(model => model.UserRole.UserId, "UserId", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UserRole.UserId, Model.UserSelectList, null, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.UserRole.UserId, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserRole.RoleId, "RoleId", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RoleSelectList, Model.RoleSelectList, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.UserRole.RoleId, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}